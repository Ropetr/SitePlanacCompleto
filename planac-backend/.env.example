# ===========================================
# CONFIGURAÇÕES DO AMBIENTE
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# BANCO DE DADOS (PostgreSQL)
# ===========================================
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:senha123@localhost:5432/planac_db?schema=public"

# ===========================================
# JWT - Autenticação
# ===========================================
# IMPORTANTE: Gere uma chave secreta forte em produção!
# Exemplo: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=sua_chave_secreta_super_forte_aqui_mude_em_producao
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_refresh_super_forte_aqui
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# CORS - Origens Permitidas
# ===========================================
# Em desenvolvimento
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
# Em produção, adicione: https://siteplanaccompleto.pages.dev

# ===========================================
# UPLOAD DE ARQUIVOS
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024 = 10485760 bytes

# ===========================================
# CLOUDFLARE R2 (Storage - Opcional)
# ===========================================
# Se quiser usar Cloudflare R2 para hospedar imagens
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=planac-images
R2_PUBLIC_URL=https://seu-bucket.r2.cloudflarestorage.com

# ===========================================
# EMAIL (SMTP - Para notificações)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contato@planacdivisorias.com.br
SMTP_PASS=sua_senha_de_app
EMAIL_FROM=Planac Distribuidora <contato@planacdivisorias.com.br>

# ===========================================
# WHATSAPP BUSINESS API (Opcional)
# ===========================================
WHATSAPP_PHONE=5543984182582
WHATSAPP_API_URL=https://api.whatsapp.com/send

# ===========================================
# ANALYTICS (Opcional)
# ===========================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutos = 15 * 60 * 1000 = 900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=info
# Opções: error, warn, info, http, debug

# ===========================================
# ADMIN PADRÃO (Primeiro acesso)
# ===========================================
DEFAULT_ADMIN_EMAIL=admin@planacdivisorias.com.br
DEFAULT_ADMIN_PASSWORD=Planac@2024
DEFAULT_ADMIN_NAME=Administrador
